<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@android:style/Animation.Translucent"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="2dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp" >

        <TextView
            android:id="@+id/edt_searchitem_item"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:singleLine="true"
            android:text="Are you sure want to delete this rack item?"
            android:textColor="@android:color/white"
            android:padding="5dp"/>

        <LinearLayout
            android:id="@+id/ll_searchitem"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:layout_margin="5dp">

            <Button
                android:id="@+id/btn_closePrj_yes"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="YES" />

            <Button
                android:id="@+id/btn_close_prj_no"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="NO" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>