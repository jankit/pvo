<?xml version="1.0" encoding="utf-8"?>
<!--
	This xml File is used for Chanage Password 
	Java File:- Change PassWordActivity.java
-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/changePwdLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/listview_item_customshape" >

        <LinearLayout
            android:id="@+id/changePWDFieldLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/changePWDOldpwdTV"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="6dp"
                android:textColor="#000000"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/changePWDOldpwdEditBox"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/edit_style"
                android:inputType="textPassword|textNoSuggestions"
                android:padding="10dp"
                android:textColor="@android:color/black"
                android:textCursorDrawable="@null"/>
            

            <TextView
                android:id="@+id/changePWDNewpwdTV"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="6dp"
                android:textColor="#000000"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/changePWDNewpwdEditBox"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/edit_style"
                android:inputType="textPassword|textNoSuggestions"
                android:padding="10dp"
                android:textColor="@android:color/black"
                android:textCursorDrawable="@null"/>

            <TextView
                android:id="@+id/changePWDConfrimpwdTV"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="6dp"
                android:textColor="#000000"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/changePWDConfrimpwdEditBox"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/edit_style"
                android:inputType="textPassword|textNoSuggestions"
                android:padding="10dp"
                android:textColor="@android:color/black"
                android:textCursorDrawable="@null"/>

            <!-- Footer Buttons -->

            <LinearLayout
                android:id="@+id/changePasswordLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/changePwdSaveBotton"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/button_height"
                    android:layout_margin="@dimen/button_margin"
                    android:layout_weight="1"
                    android:background="@drawable/button_style"
                    android:paddingLeft="@dimen/button_pading_left"
                    android:paddingRight="@dimen/button_pading_right"
                    android:text="SAVE"
                    android:textColor="@color/button_text_color"
                    android:textSize="@dimen/button_text_size" />

                <Button
                    android:id="@+id/changePasswordCancelButton"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/button_height"
                    android:layout_margin="@dimen/button_margin"
                    android:layout_weight="1"
                    android:background="@drawable/button_style"
                    android:paddingLeft="@dimen/button_pading_left"
                    android:paddingRight="@dimen/button_pading_right"
                    android:text="CANCEL"
                    android:textColor="@color/button_text_color"
                    android:textSize="@dimen/button_text_size" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>