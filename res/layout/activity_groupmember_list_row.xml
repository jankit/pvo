<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/listview_item_customshape">

    <ImageView 
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/no_image"
        android:layout_alignParentLeft="true"
        android:id="@+id/ivMemeberPhoto"/>
    <TextView
       android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ivMemeberPhoto"
        android:textColor="#000000"
        android:text="DEmo Name"
        android:layout_margin="3dp"
        android:id="@+id/groupMemberName"/>
     <TextView
       android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ivMemeberPhoto"
        android:layout_below="@+id/groupMemberName"
        android:text="DEmo Name"
        android:textColor="#000000"
        android:layout_margin="3dp"
        android:id="@+id/groupMemberCompanyName"/>
    <Button 
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/delete"
        android:layout_alignParentRight="true"
        android:id="@+id/deleteIV"
        android:layout_margin="5dp"
        android:padding="10dp"
       android:layout_centerInParent="true"/>
</RelativeLayout>