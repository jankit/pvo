<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tbl_term_mainLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white" >

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_trems_header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_span="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="Select Trems"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </TableRow>

    <View
        android:layout_height="1dip"
        android:background="@color/btnGreenColor" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center" >

        <CheckBox
            android:id="@+id/chk_tremsList_checkAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="All" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/chk_trems_naviSharat"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Navi Sharat" />

            <CheckBox
                android:id="@+id/chk_trems_juniSharat"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Juni Sharat" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/chk_trems_kheti"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Kheti Juni" />

            <CheckBox
                android:id="@+id/chk_trems_prasha"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="PRA.SHA.P" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/chk_trems_dispute"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dispute" />

            <CheckBox
                android:id="@+id/chk_trems_shreeSarkar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Shree Sarkar" />
        </LinearLayout>

       <!--  <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/chk_trems_doNotKnow"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Do not know" />
        </LinearLayout> -->
    </LinearLayout>

    <View
        android:layout_height="1dip"
        android:background="@color/btnGreenColor" />

    <LinearLayout
        android:id="@+id/ll_trems_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btn_trems_ok"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/footerBtnHeight"
            android:layout_margin="@dimen/footerBtnMargin"
            android:background="@color/btnBlueColor"
            android:text="OK"
            android:textColor="@android:color/white"
            android:textSize="@dimen/footerBtnTxtSize" />
    </LinearLayout>

</TableLayout>