<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#ffebeff1"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/audio_object_shareview"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ffffeb3b"
        android:orientation="horizontal"
        android:padding="8dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="20dp"
            android:src="@drawable/delete" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/audio_object_deleteview"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ff558b2f"
        android:orientation="horizontal"
        android:padding="8dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="20dp"
            android:src="@drawable/dealer_ic" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/audio_object_mainview"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ffebeff1"
        android:orientation="vertical"
        android:padding="8dp"
        android:weightSum="1" >

        <!-- Image layout -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/image_round_border"
                android:gravity="top"
                android:scaleType="fitXY"
                android:src="@drawable/pro_pic" />
        </LinearLayout>
        <!-- Detatil layout -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Flat for rent"
                android:textSize="20dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rs. 34,00,000"
                android:textColor="#08ADDD"
                android:textSize="20dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4 BHK Bunglow | 1200 sq.ft | 2 Bathrooms"
                android:textColor="#C9C7C8" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/dealer_ic"
                android:drawablePadding="5dp"
                android:text="Shree Ashtavinayk Estate." />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/calender"
                    android:drawablePadding="5dp"
                    android:padding="2dp"
                    android:text="Today" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/location_ic"
                    android:drawablePadding="5dp"
                    android:padding="2dp"
                    android:text="Today" />
            </LinearLayout>
        </LinearLayout>
        <!-- Button layout -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:src="@drawable/fav_star_act" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:src="@drawable/call_ic" />
        </LinearLayout>

        <!-- add views here that you want to show at the top ! -->
    </LinearLayout>

</RelativeLayout>