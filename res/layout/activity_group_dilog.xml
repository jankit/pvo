<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="150dp"
    android:background="@drawable/bg" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/listview_item_customshape" >

        <TextView
            android:id="@+id/groupTv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="6dp"
            android:text="Select Group"
            android:textColor="#000000"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/groupListSpinner"
            style="@style/SpinnerStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/groupTv"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:spinnerMode="dropdown" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/groupListSpinner" >

            <Button
                android:id="@+id/groupSaveButton"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/button_height"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:background="@drawable/button_style"
                android:paddingLeft="@dimen/button_pading_left"
                android:paddingRight="@dimen/button_pading_right"
                android:text="SAVE"
                android:textColor="@color/button_text_color"
                android:textSize="@dimen/button_text_size" />

            <Button
                android:id="@+id/groupCancelButton"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/button_height"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:background="@drawable/button_style"
                android:paddingLeft="@dimen/button_pading_left"
                android:paddingRight="@dimen/button_pading_right"
                android:text="CANCEL"
                android:textColor="@color/button_text_color"
                android:textSize="@dimen/button_text_size" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>