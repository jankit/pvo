<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <!-- Header layout -->
    <LinearLayout
        android:id="@+id/llAreaUnitCalcHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#2665B4"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Area Unit Calculator"
            android:textColor="@android:color/white"
            android:textStyle="bold" 
            android:textSize="15dp"/>
    </LinearLayout>
    <WebView 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/wvAreaUnitCalc"
        android:layout_marginBottom="29dp"
        android:layout_below="@+id/llAreaUnitCalcHeader"/>
    
    <!-- Footer layout -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/layout_background_color1"
        android:gravity="center"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/btnAraeCalcBackButton"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_height"
            android:layout_margin="@dimen/button_margin"
            android:background="@drawable/button_style"
            android:paddingLeft="@dimen/button_pading_left"
            android:paddingRight="@dimen/button_pading_right"
            android:text="BACK"
            android:textColor="@color/button_text_color"
            android:textSize="@dimen/button_text_size" />
    </LinearLayout>
</RelativeLayout>
