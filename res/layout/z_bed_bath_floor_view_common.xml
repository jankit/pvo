<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_bedBathFolorView_icon"
        android:layout_width="@dimen/iconWidth"
        android:layout_height="@dimen/iconHeight"
        android:layout_margin="@dimen/iconMargin"
        android:padding="@dimen/iconPadding"/>

    <ImageView
        android:id="@+id/iv_bedBathFolorView_minusIcon"
        android:layout_width="@dimen/iconWidth"
        android:layout_height="@dimen/iconHeight"
        android:layout_margin="@dimen/iconMargin"
        android:padding="@dimen/iconPadding"
        android:src="@drawable/minus" />

    <TextView
        android:id="@+id/tv_bedBathFolorView_number"
        android:layout_width="@dimen/iconWidth"
        android:layout_height="@dimen/iconHeight"
        android:layout_margin="@dimen/iconMargin"
        android:gravity="center"
        android:padding="@dimen/iconPadding"/>

    <ImageView
        android:id="@+id/iv_bedBathFolorView_plusIcon"
        android:layout_width="@dimen/iconWidth"
        android:layout_height="@dimen/iconHeight"
        android:layout_margin="@dimen/iconMargin"
        android:padding="@dimen/iconPadding"
        android:src="@drawable/plus" />

</LinearLayout>